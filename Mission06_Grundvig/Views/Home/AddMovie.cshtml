@{
    ViewData["Title"] = "Add Movie";
}

@model Movie

<!-- Formatting is using classes from bootstrap-->
<!--Outer container-->
<div class="container mt-5" style="max-width: 500px;">
    <h1 class="mb-3">Add a Movie</h1>

    <p class="text-muted">
        Please enter the information for the new movie below.
    </p>

    <!-- Begin Form-->
    <form>

    <!-- Container for Category Input-->
    <div class="mb-3">
        <label for="category" class="form-label">
            Category
        </label>
        <select id="category" 
                class="form-control" 
                asp-for="Category"
                asp-items="Html.GetEnumSelectList<Category>()">

                <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Container for Title input -->
    <div class="mb-3">
        <label for="title" class="form-label">
            Title
        </label>
        <input id="title"
               class="form-control"
                type="text"
                asp-for="Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Container for Year input-->
    <div class="mb-3">
        <label for="year" class="form-label">
            Year
        </label>
        <input id="year"
                class="form-control"
                type="number" 
                asp-for="Year" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Container for Director Name input -->
    <div class="mb-3">
        <label for="director" class="form-label">
            Director Full Name
        </label>
        <input id="director"
               class="form-control"
               type="text"
               asp-for="Director" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Container for Rating Input-->
    <div class="mb-3">
        <label for="rating" class="form-label">
            MPA Rating
        </label>
        <select id="rating"
                class="form-control"
                asp-for="Rating"
                asp-items="Html.GetEnumSelectList<Rating>()">

                <option value="">-- Select Rating --</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Container for Edited input -->
    <div class="mb-3">
        <label class="form-label">Is this movie edited?</label>

        <div class="form-check">
            <input class="form-check-input"
                   type="radio"
                   asp-for="Edited"
                   value="true"
                   id="editedYes" />
            <label class="form-check-label" for="editedYes">
                Yes
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input"
                   type="radio"
                   asp-for="Edited"
                   value="false"
                   id="editedNo" />
            <label class="form-check-label" for="editedNo">
                No
            </label>
        </div>
    </div>

    <!-- Container for LentTo input -->
    <div class="mb-3">
        <label for="lent-to" class="form-label">
            If the movie is lent out, please enter who it is lent to.
        </label>
        <input id="lent-to"
               class="form-control"
               type="text"
               asp-for="LentTo" />
    </div>

    <!-- Container for Notes input -->
    <div class="mb-3">
        <label for="notes" class="form-label">
            Additional Notes
        </label>
        <textarea id="notes" class="form-control" asp-for="Notes"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Add Movie</button>

    </form>
</div>