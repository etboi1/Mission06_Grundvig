@{
    ViewData["Title"] = "Submission Result";
}

@model Movie

<div class="container mt-5">
    <div class="card shadow-sm border-success">

        <div class="card-header bg-success text-white">
            Movie Added Successfully 🎬
        </div>

        <div class="card-body text-center">

            <h4 class="card-title">
                "@Model.Title" has been added to Joel's Movie Collection!
            </h4>

            <p class="card-text text-muted">
                Thanks for contributing to the collection.
            </p>

            <a asp-action="AddMovie" class="btn btn-primary mt-3">
                Add Another Movie
            </a>

            <a asp-action="Index" class="btn btn-outline-secondary mt-3 ms-2">
                Return Home
            </a>

        </div>
    </div>
</div>
