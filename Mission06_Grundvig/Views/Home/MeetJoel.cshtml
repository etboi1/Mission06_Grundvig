@{
    ViewData["Title"] = "Meet Joel";
}

<!-- Overall Container -->
<div class="container py-5">

    <!-- Header & Subheader -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Get to Know Joel</h1>
        <p class="lead text-muted">
            Learn more about Joel by exploring the links below
        </p>
    </div>

    <!-- Container for Links-->
    <div class="row g-4 justify-content-center">

        <!-- Quick Wits Comedy Card -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm text-center border-0">
                <a href="https://www.qwcomedy.com/" target="_blank">
                    <img src="/img/QuickWitsLogo.jpg"
                         class="card-img-top"
                         alt="Quick Wits Comedy logo" />
                </a>

                <div class="card-body text-center">
                    <h5 class="card-title">Quick Wits Comedy</h5>
                    <p class="card-text text-muted">
                        Check out Joel's comedy performances.
                    </p>
                    <a href="https://www.qwcomedy.com/" target="_blank" class="btn btn-outline-primary">
                        Visit Site
                    </a>
                </div>
            </div>
        </div>

        <!-- Baconsale Card -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm border-0">
                <a href="https://baconsale.com/" target="_blank">
                <img src="/img/BaconsaleKate.jpg"
                     class="card-img-top"
                     alt="Awkward men (presumably including Joel Hilton) making awkward poses around some woman Professor Hilton thinks we should know?" />
                </a>

                <div class="card-body text-center">
                    <h5 class="card-title">Baconsale</h5>
                    <p class="card-text text-muted">
                        Listen to Joel on the Baconsale podcast.
                    </p>
                    <a href="https://baconsale.com/" target="_blank" class="btn btn-outline-primary">
                        Visit Site
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>